@model ProvaConnessioneLicenze.Models.License

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Simple Data Table</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <style>

        body {
            color: #566787;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
        }

        .table-responsive {
            margin: 30px 0;
        }

        .table-wrapper {
            min-width: 1000px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .table-title {
            padding-bottom: 10px;
            margin: 0 0 10px;
        }

            .table-title h2 {
                margin: 8px 0 0;
                font-size: 22px;
            }

        .pagination {
            float: right;
            margin: 0 0 5px;
        }

            .pagination li a {
                border: none;
                font-size: 95%;
                width: 30px;
                height: 30px;
                color: #999;
                margin: 0 2px;
                line-height: 30px;
                border-radius: 30px !important;
                text-align: center;
                padding: 0;
            }

                .pagination li a:hover {
                    color: #666;
                }

            .pagination li.active a {
                background: #03A9F4;
            }

                .pagination li.active a:hover {
                    background: #0397d6;
                }

            .pagination li.disabled i {
                color: #ccc;
            }

            .pagination li i {
                font-size: 16px;
                padding-top: 6px
            }

        .hint-text {
            float: left;
            margin-top: 6px;
            font-size: 95%;
        }

        #table1 th {
            width:130px;
            height:30px;
        }

        #table1 td {
            width:350px;
            height:30px;
        }

        #table2 th {
            width: 200px ;
            height: 30px;
        }

        #table2 td {
            width: 100px;
            height: 30px;
        }

    </style>

</head>
<body>
    <div class="container">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-lg-12 text-center"><h2><b> DETTAGLI LICENZA</b></h2></div>
                    </div>
                </div>
                <hr />
                <div class="row" style="margin-left:150px; font-size:16px">
                    <div>
                        <table id="table1">
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Activationcode)</th>
                                <td >@Html.DisplayFor(model => model.Activationcode)</td>
                            </tr>
                            <tr>
                                <th >ID Cliente</th>
                                <td >@Html.DisplayFor(model => model.Customerid)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Resellerid)</th>
                                <td >@Html.DisplayFor(model => model.Resellerid)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Activationdate)</th>
                                <td >@Html.DisplayFor(model => model.Activationdate)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Duedate)</th>
                                <td >@Html.DisplayFor(model => model.Duedate)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Locked)</th>
                                <td >  @Html.DisplayFor(model => model.Locked)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Notes)</th>
                                <td >  @Html.DisplayFor(model => model.Notes)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Icecatenabled)</th>
                                <td >  @Html.DisplayFor(model => model.Icecatenabled)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Onlyforbeta)</th>
                                <td >  @Html.DisplayFor(model => model.Onlyforbeta)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Apiendpoint)</th>
                                <td >  @Html.DisplayFor(model => model.Apiendpoint)</td>
                            </tr>
                        </table>
                    </div>
                    <div>
                        <table id="table2">
                            <tr>
                                <th >Tipo Licenza</th>
                                <td > @Html.DisplayFor(model => model.Licensetype)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Maxsuppliers)</th>
                                <td >  @Html.DisplayFor(model => model.Maxsuppliers)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Maxpersonalcatalogs)</th>
                                <td >  @Html.DisplayFor(model => model.Maxpersonalcatalogs)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Maxpricelists)</th>
                                <td >  @Html.DisplayFor(model => model.Maxpricelists)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Maxpersonalproducts)</th>
                                <td >  @Html.DisplayFor(model => model.Maxpersonalproducts)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Maxapikeys)</th>
                                <td >  @Html.DisplayFor(model => model.Maxapikeys)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Schedulerenabled)</th>
                                <td >  @Html.DisplayFor(model => model.Schedulerenabled)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Backupenabled)</th>
                                <td >  @Html.DisplayFor(model => model.Backupenabled)</td>
                            </tr>
                            <tr>
                                <th >@Html.DisplayNameFor(model => model.Lastreminder)</th>
                                <td  >  @Html.DisplayFor(model => model.Lastreminder)</td>
                            </tr>
                            
                        </table>
                    </div>
                </div>
                <br />
                <hr />
                <br />
                <div class="form-group text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Activationcode" type="button" class="btn btn-primary" data-customerid="0" data-toggle="customer-edit">
                        Modifica
                    </a>
                </div>
                <div class="form-group text-center">
                    <a asp-action="Index" type="button" class="btn btn-success" data-customerid="0" data-toggle="customer-edit">
                        Torna alla lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

